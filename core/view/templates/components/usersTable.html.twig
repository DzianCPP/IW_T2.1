{% block table %}
<table class="table table-sm table-hover" id="all-users-table">
  <tr>
    <th scope="col"><input type="checkbox" id="check-all" /></th>
    <th scope="col">ID</th>
    <th scope="col">E-mail</th>
    <th scope="col">Full Name</th>
    <th scope="col">Gender</th>
    <th scope="col">Status</th>
    <th scope="col"></th>
  </tr>
  {% for user in users %}
  <tr>
    <td><input name="select-user" type="checkbox" value="{{ user.id }}" /></td>
    <td>{{ user.id }}</td>
    <td>{{ user.email }}</td>
    <td>{{ user.name }}</td>
    <td>
      {% for key, value in GENDERS %} {% if key == user.gender %}
      {{ value }}
      {% endif %} {% endfor %}
    </td>
    <td>
      {% for key, value in STATUSES %} {% if key == user.status %}
      {{ value }}
      {% endif %} {% endfor %}
    </td>
    <td>
      <div class="btn-group-vertical">
        <a class="btn btn-success" href="/user/edit/{{ user.id }}">Edit</a>
        <a
          class="btn btn-dark"
          id="{{ user.id }}"
          name="delete"
        >
          Delete</a
        >
      </div>
    </td>
  </tr>
  {% endfor %}
</table>
{% endblock %}
