{% extends "base.html.twig" %} {% block content %}
<div class="container-xs container-sm container-md container-xl pt-5 w-100">
  <div class="row w-100 mt-2">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <h1 class="h1 w-100 mb-1 text-center" id="main-page-h1">{{ header }}</h1>
    </div>
    <div class="col-sm-1"></div>
  </div>

  <div class="row w-100 mt-1">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <h5 class="h5 w-100 mt-1 mb-3 text-center" id="main-page-h5">
        {{ dataSource }}
      </h5>
    </div>
    <div class="col-sm-1"></div>
  </div>

  {% if users|length > 0 %}
  <div class="row w-auto">
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
      <div class="table-responsive">
        {% use 'components/usersTable.html.twig' %} {% block table %}
        {{ parent() }}
        {% endblock %}
      </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
  </div>

  <div class="row w-100">
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
      <div>
        <a class="btn btn-success w-auto mb-1" id="delete-all">
          Delete selected users
        </a>
      </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
  </div>

  {% else %}
  <div class="row w-100">
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
      <div>
        <h1 class="h1 w-100 m-1">{{ "No user found" }}</h1>
      </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
  </div>
  {% endif %} {% if users|length > 1 %} {% use
  'components/usersPagination.html.twig' %} {% block pagination %}
  {{ parent() }}
  {% endblock %} {% endif %}

  <div class="row w-100">
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
      <div>
        <a
          class="btn btn-success w-100 mb-1"
          id="users-link-add-user"
          href="/user/new"
        >
          Add user
        </a>
      </div>
      <div>
        <a class="btn btn-dark w-100 mb-5" id="users-link-back" href="/">
          Main page
        </a>
      </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
  </div>
</div>

<script type="text/javascript" src="/assets/scripts/users/delete.js"></script>
<script
  type="text/javascript"
  src="/assets/scripts/users/selectAll.js"
></script>
<script
  type="text/javascript"
  src="/assets/scripts/users/deleteAll.js"
></script>

{% endblock %}
